<li id="memory-<%= memory.id %>">
  <%= link_to gravatar_for(memory.user, size: 50), memory.user %>
  <span class="user"><%= link_to memory.user.name, memory.user %></span>
  <span class="content"><%= memory.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(memory.created_at) %> ago.
  </span>
</li>